<% if model_signed_in? %> 

<h1>Friends</h1>

<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
     
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twritter</th>
      
      <th> </th><!--colspan="2"-->
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <!--<if friend.model == current_model%>-->
      <tr>

        <td> <%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twritter %></td>
       <!-- <td><%= friend.model_id %></td>-->
        <!--<td><= link_to 'Show', friend, class: "btn btn-secondary" %></td>-->
       <!-- <td><= link_to 'Edit', edit_friend_path(friend),class: "btn btn-secondary" %></td>-->
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
      <!--<end%>-->
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>

<% else %>
<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>
<% end %>
